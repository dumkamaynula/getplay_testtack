<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= f.file_field :photo %>
  </div>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :package_name %>
    <%= f.text_field :package_name %>
  </div>

  <div class="field">
    <%= f.label :store %>
        <%= f.collection_select :store, Game::STORES, :to_s, :to_s, :include_blank => "choose a store"%>
  </div>

  <div>
    <%= f.submit class: "btn btn-default" %>
  </div>
<% end %>
